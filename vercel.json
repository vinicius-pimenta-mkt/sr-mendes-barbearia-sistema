{
  "version": 2,
  "builds": [
    {
      "src": "sr-mendes-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "DashboardBarber/src/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "DashboardBarber/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "sr-mendes-frontend/dist/$1"
    }
  ]
}

